<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_margin">@dimen/cardview_margin</item>
    </style>

    <style name="CardViewLinearLayout">
        <item name="android:padding">@dimen/cardview_linear_layout_padding</item>
    </style>

    <style name="TextViewWithQuestion">
        <item name="android:layout_marginBottom">@dimen/textview_margin</item>
        <item name="android:textSize">@dimen/textview_text_size</item>
    </style>

    <style name="ImageViewForQuestion">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">@dimen/imageview_margin</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SubmitBtn">
        <item name="android:layout_margin">@dimen/submit_btn_margin</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
